extends ../layout
include ../mixins/form_input

block content
  h1 Editar Usuario

  if (errors)
    ul
      each error in errors
        li.error  Error en: #{error.path} error: #{error.message}

  if user
    form(method='post' action='/users/update')
      +input_readonly('Id', 'text', 'userId', user.id, errors)
      +input_required('Alias', 'text', 'nickname', user.nickname, errors)
      +input_required('Nombre', 'text', 'firstname', user.firstname, errors)
      +input_required('Apellido', 'text', 'lastname', user.lastname, errors)
      +input_required('Email', 'email', 'email', user.email, errors)
      +input_required('Fecha de nacimiento', 'text', 'bd', user.birthdate, null)
      +input_required('Fecha de nacimiento', 'date', 'birthdate', user.birthdate, errors)
      button(type='submit') Grabar

  else
    p user no encontrado o vacio

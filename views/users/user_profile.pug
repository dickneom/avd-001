extends ../layout

block content
  h1 Perfil del usuario

  .row
    .col-sm-4
      img(src=user.picture width=180 height=300 alt=user.picture)
      p= user.picture
    .col-sm-6
      p= user.id
      p Alias #{user.nickname}
      p Nombre: #{user.fullname}
      p Email: #{user.email}
      p Fecha de Nacimiento: #{user.birthdate}
      p Autenticado: #{user.authenticated}
      p Admnistrador: #{user.isAdmin}
  .row
    ul
      li: a(href='/users/' + sessionUser.id + '/images') Cambiar foto
      li: a(href='/users/pass_change') Cambiar clave
      li: a(href='/users/' + sessionUser.id + '/update') Editar datos

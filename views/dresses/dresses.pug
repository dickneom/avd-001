extends ../layout

block content
  h1 Lista de vestidos

  a(href='/dresses/create') Agregar Vestido
  if dresses
    each dress in dresses
      p= dress.id
      p= dress.title
      p= dress.nickname
      p= dress.fullname
      a(href='/dresses/' + dress.id) Ver
      a(href='/dresses/' + dress.id + '/edit') Editar

  else
    p dresses no encontrado o vacio

  if page > 1
    li: a(href='/dresses?limit='+limit+'&page='+(page-1)) Anterior
  else
    li: a(href='/dresses?limit='+limit+'&page='+(page-1) deactivate) Anterior
  li= page
  li: a(href='/dresses?limit='+limit+'&page='+(page+1)) Siguiente

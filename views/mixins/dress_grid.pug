include links

mixin showDressGrid(dresses, type)
  .container
    .row
      if dresses
        each dress in dresses
          .col-sm-4
            if type === 'index'
              +showDressIndex(dress)
            if type === 'closet'
              +showDressCloset(dress)
            if type === 'mycloset'
              +showDressMyCloset(dress)
      else
        p no hay vestidos





mixin showDressIndex(dress)
  p= dress.id
  img(src=dress.image width=120 height=180 alt=dress.image)
  h3= dress.title
  p= dress.color.color
  p= dress.state.title
  p= dress.brand.brand
  p= dress.priceForRent
  p= dress.priceForSale
  p= dress.priceOriginal
  p= dress.image

  if dress.user
    if dress.user.nickname
      if sessionUser
        //- a(href='/users/' + dress.user.id) #{dress.user.nickname}
        +linkShowUser(dress.user.id, dress.user.nickname)
      else
        p #{dress.user.nickname}
    else
      if sessionUser
        a(href='/users/' + dress.user.id) #{dress.user.fullname}
      else
        p #{dress.user.fullname}
  br
  +linkShowDress(dress.id)
  //- a(href='/dresses/' + dress.id) Ver






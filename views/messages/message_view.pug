extends ../layout

block content
  .container
    h1 Ver un mensaje
    .row
      .col-sm-9
        .row
          .col-sm-6
            if message
              h3= message.subject
              p De: #{message.userFrom.nickname}
              p Para: #{message.userTo.nickname}
              p Fecha: #{message.date}
              p Texto: #{message.text}
              p Url: #{message.urlTo}
              a(href=message.urlTo) ir

      .col-md-3
        p Publicidad

